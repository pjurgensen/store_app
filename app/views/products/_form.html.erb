<%= render("layouts/errors", :object => @product) %>

<div class="brand-grey product-form container"><%= form_for(@product) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <%= f.submit(:class => "brand-button btn btn-default") %>
  <% end %>
</div>
